{
    "env": {
        "browser": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
     "settings": {
        "import/resolver": "babel-plugin-root-import"
    },
    "rules": {
        "no-plusplus": "off",
        "no-console": "warn",
        "import/prefer-default-export": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": "off",
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "semi": false
            }
        ]
    }
}